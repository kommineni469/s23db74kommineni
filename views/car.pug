extends layout

block content
  h1= title
  -var results = results

  div(class= "container-fluid")
    div(class = "row")  
      each item,index in results
        div(class= "col-sm-2", onclick=`buy(${index})`) car name: &nbsp; #{item.carName} car color: &nbsp; #{item.carcolor} car count:  &nbsp; #{item.carcount}

  script.
    function buy(itemNum){
      alert(`You purchased item ${itemNum+1}`)
    }